{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "strict": true,
        "types": ["astro/client"],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@layouts/*": ["src/layouts/*"],
            "@models/*": ["src/models/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
